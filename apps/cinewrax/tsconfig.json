{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "noEmit": true,
    "isolatedModules": true,
    "moduleResolution": "bundler",
    "module": "esnext",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "lib": [
      "dom"
    ],
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
